{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "composite": true,
    "removeComments": false,
    "noEmit": false,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "typeRoots": ["./types"],
    "paths": {
      "@contracts": ["types/truffle-contracts/index"],
      "@contracts/*": ["types/truffle-contracts/*"],
      "@utils": ["src/utils"],
      "@test-utils": ["src/test/test.utils"]
    },
    "plugins": [{"transform": "@zerollup/ts-transform-paths", "exclude": ["*"]}]
  }
}
